<?xml version="1.0" encoding="UTF-8"?>

<AnchorPane xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml" 
            fx:controller="application.view.controller.TimKiemCaLamViecController"
            prefWidth="800" prefHeight="600">

    <VBox spacing="10" alignment="TOP_CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Label text="Tìm kiếm ca làm việc" style="-fx-font-size: 18px; -fx-font-weight: bold"/>

        <HBox spacing="15" alignment="CENTER">
            <Label text="Ngày làm việc:"/>
            <DatePicker fx:id="datePickerNgay"/>
            <Button text="Tìm kiếm" onAction="#handleTimKiem"/>
        </HBox>

        <TableView fx:id="tableCaLam" prefHeight="500">
            <columns>
                <TableColumn text="Mã ca" fx:id="colMaCa" prefWidth="100"/>
                <TableColumn text="Ngày làm việc" fx:id="colNgay" prefWidth="150"/>
                <TableColumn text="Giờ bắt đầu" fx:id="colBatDau" prefWidth="120"/>
                <TableColumn text="Giờ kết thúc" fx:id="colKetThuc" prefWidth="120"/>
                <TableColumn text="Nhân viên" fx:id="colNhanVien" prefWidth="200"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
