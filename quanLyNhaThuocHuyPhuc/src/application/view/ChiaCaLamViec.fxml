<?xml version="1.0" encoding="UTF-8"?>

<AnchorPane xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml" 
            fx:controller="application.view.controller.ChiaCaLamViecController"
            prefWidth="600" prefHeight="400">

    <VBox spacing="15" alignment="TOP_CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Label text="Chia ca làm việc" style="-fx-font-size: 18px; -fx-font-weight: bold"/>

        <GridPane hgap="10" vgap="10">
            <Label text="Nhân viên:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="comboNhanVien" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="250"/>

            <Label text="Ngày làm việc:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <DatePicker fx:id="datePickerNgay" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Giờ bắt đầu:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtBatDau" promptText="HH:mm" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Giờ kết thúc:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtKetThuc" promptText="HH:mm" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <Button text="Lưu ca làm việc" onAction="#handleLuuCaLam"/>
    </VBox>
</AnchorPane>
