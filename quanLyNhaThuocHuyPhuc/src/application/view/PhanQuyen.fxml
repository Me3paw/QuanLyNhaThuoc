<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<StackPane fx:controller="application.view.controller.PhanQuyenController"
           xmlns="http://javafx.com/javafx/8.0.171"
           xmlns:fx="http://javafx.com/fxml/1"
           style="-fx-padding: 20;">
           

    <!-- VBox bao quanh toàn bộ giao diện -->
    <VBox spacing="20" StackPane.alignment="CENTER" style="-fx-padding: 20;">
        
        <!-- Tiêu đề -->
        <VBox alignment="CENTER" spacing="10">
            <Label text="Phân Quyền Người Dùng" styleClass="form-title"/>
        </VBox>

        <!-- Layout chính -->
        <HBox spacing="20" HBox.hgrow="ALWAYS">
            
            <!-- Cột 1: Chọn người dùng -->
            <VBox spacing="20" HBox.hgrow="ALWAYS">
                <Label text="Tên người dùng:" styleClass="form-label"/>
                <ComboBox fx:id="comboUserList" promptText="Chọn người dùng" styleClass="combo-box"/>
            </VBox>

            <!-- Cột 2: Chọn vai trò -->
            <VBox spacing="20" HBox.hgrow="ALWAYS">
                <Label text="Vai trò:" styleClass="form-label"/>
                <ComboBox fx:id="comboRole" promptText="Chọn vai trò" styleClass="combo-box">
                    <items>
                        <FXCollections fx:factory="observableArrayList">

                        </FXCollections>
                    </items>
                </ComboBox>
            </VBox>

        </HBox>

        <!-- Nút hành động -->
        <HBox spacing="10" alignment="CENTER" StackPane.alignment="BOTTOM_CENTER">
            <Button text="Cập Nhật Quyền" fx:id="updateRoleButton" onMouseClicked="#handleUpdateRole" styleClass="primary-button"/>
            <Button text="Lưu Thay Đổi" fx:id="saveChangesButton" onMouseClicked="#handleUpdateRole" styleClass="primary-button"/>
        </HBox>

    </VBox>
</StackPane>