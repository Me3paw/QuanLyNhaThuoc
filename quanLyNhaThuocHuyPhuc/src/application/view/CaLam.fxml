<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.viewcontroller.CaLamController">
    
    <top>
        <Label text="Quản Lý Ca Làm" style="-fx-font-size: 22px; -fx-padding: 10;" BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <TableView fx:id="tableCaLam" prefHeight="300" prefWidth="600">
            <columns>
                <TableColumn fx:id="colMaCa" text="Mã Ca" prefWidth="80"/>
                <TableColumn fx:id="colTenCa" text="Tên Ca" prefWidth="120"/>
                <TableColumn fx:id="colBatDau" text="Giờ Bắt Đầu" prefWidth="100"/>
                <TableColumn fx:id="colKetThuc" text="Giờ Kết Thúc" prefWidth="100"/>
                <TableColumn fx:id="colGhiChu" text="Ghi Chú" prefWidth="200"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10" padding="10">
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                </rowConstraints>

                <Label text="Mã Ca:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="tfMaCa" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Tên Ca:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="tfTenCa" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Giờ Bắt Đầu:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="tfBatDau" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Giờ Kết Thúc:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="tfKetThuc" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Ghi Chú:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="tfGhiChu" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="btnThem" text="Thêm" onAction="#themCa"/>
                <Button fx:id="btnSua" text="Sửa" onAction="#suaCa"/>
                <Button fx:id="btnXoa" text="Xoá" onAction="#xoaCa"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
