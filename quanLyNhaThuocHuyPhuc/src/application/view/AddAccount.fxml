<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane fx:id="accountForm"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.view.controller.AddAccountController"
            styleClass="anchor-pane">
    

    <VBox spacing="30.0"
          alignment="TOP_CENTER"
          AnchorPane.topAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          fillWidth="true"
          style="-fx-padding: 40;"
          styleClass="anchor-pane"
          stylesheets="@/application/assets/css/Account.css">
          
           
        <!-- Tiêu đề lớn -->
        <Label text="Thêm Tài Khoản"
               styleClass="form-title"
               style="-fx-font-size: 34px; -fx-font-weight: bold; -fx-text-fill: #ED6214;"/>

        <!-- Form nhập liệu -->
        <GridPane fx:id="formGrid" styleClass="grid-pane" alignment="CENTER_LEFT" VBox.vgrow="ALWAYS" maxWidth="800">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints halignment="LEFT" minWidth="180" maxWidth="200"/>
        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="300"/>
    </columnConstraints>

    <!-- Tên đăng nhập -->
    <Label text="Tên đăng nhập:" GridPane.rowIndex="0" GridPane.columnIndex="0"
           styleClass="form-label" />

    <TextField fx:id="usernameField" promptText="Nhập tên đăng nhập"
               GridPane.rowIndex="0" GridPane.columnIndex="1"
               styleClass="input-field" />

    <!-- Mật khẩu -->
    <Label text="Mật khẩu:" GridPane.rowIndex="1" GridPane.columnIndex="0"
           styleClass="form-label" />
    <PasswordField fx:id="passwordField" promptText="Nhập mật khẩu"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"
                   styleClass="input-field" />

    <!-- Vai trò -->
    <Label text="Vai trò:" GridPane.rowIndex="2" GridPane.columnIndex="0"
           styleClass="form-label" />
    <ComboBox fx:id="roleComboBox" promptText="Chọn vai trò"
              GridPane.rowIndex="2" GridPane.columnIndex="1"
              styleClass="combo-box"  >
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Quản lý"/>
                <String fx:value="Nhân viên"/>
            </FXCollections>
        </items>
    </ComboBox>

    <!-- Ngày tham gia -->
    <Label text="Ngày tham gia:" GridPane.rowIndex="3" GridPane.columnIndex="0"
           styleClass="form-label" />
    <DatePicker fx:id="dateOfJoiningPicker" promptText="Chọn ngày tham gia"
                GridPane.rowIndex="3" GridPane.columnIndex="1"
                styleClass="date-picker" />
</GridPane>


        <!-- Nút thao tác -->
        <HBox spacing="30" alignment="CENTER" styleClass="hbox-buttons">
            <Button text="Lưu Tài Khoản" fx:id="saveButton"
                    onAction="#handleSaveAction" styleClass="primary-button"/>
            <Button text="Hủy" fx:id="cancelButton"
                    onAction="#handleCancelAction" styleClass="primary-button"/>
        </HBox>
    </VBox>
</AnchorPane>
