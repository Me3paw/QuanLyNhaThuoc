<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="application.view.controller.NhapLoThuocController"
           stylesheets="@/application/assets/css/QuanLyNhanVien.css"
           prefWidth="800" prefHeight="600">

    <VBox spacing="15" >
    	 <padding>
	        <Insets top="20" right="20" bottom="20" left="20"/>
	    </padding>
        <!-- Form nhập liệu -->
        <GridPane hgap="15" vgap="10">
		    
		
		    <!-- Hàng 0 -->
		    <Label text="Mã lô thuốc:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="form-label"/>
		    <TextField fx:id="txtMaLoThuoc" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="input-field"/>
		
		    <Label text="Mã thuốc:" GridPane.rowIndex="0" GridPane.columnIndex="2" styleClass="form-label"/>
		    <TextField fx:id="txtMaThuoc" GridPane.rowIndex="0" GridPane.columnIndex="3" styleClass="input-field"/>
		
		    <Label text="Số lượng nhập:" GridPane.rowIndex="0" GridPane.columnIndex="4" styleClass="form-label"/>
		    <TextField fx:id="txtSoLuongNhap" GridPane.rowIndex="0" GridPane.columnIndex="5" styleClass="input-field"/>
		
		    <!-- Hàng 1 -->
		    <Label text="Ngày nhập:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="form-label"/>
		    <DatePicker fx:id="dpNgayNhap" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="input-field"/>
		
		    <Label text="Hạn sử dụng:" GridPane.rowIndex="1" GridPane.columnIndex="2" styleClass="form-label"/>
		    <DatePicker fx:id="dpHanSuDung" GridPane.rowIndex="1" GridPane.columnIndex="3" styleClass="input-field"/>
		
		    <Label text="Giá nhập:" GridPane.rowIndex="1" GridPane.columnIndex="4" styleClass="form-label"/>
		    <TextField fx:id="txtGiaNhap" GridPane.rowIndex="1" GridPane.columnIndex="5" styleClass="input-field"/>
		
		    <!-- Hàng 2 -->
		    <Label text="Ghi chú:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="form-label"/>
		    <TextField fx:id="txtGhiChu" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="5" styleClass="input-field"/>
		</GridPane>

        <!-- Các nút chức năng -->
        <HBox spacing="15" alignment="CENTER">
            <Button text="Thêm mới" fx:id="btnThemMoi" styleClass="primary-button" onAction="#handleThemMoi"/>
            <Button text="Cập nhật" fx:id="btnCapNhat" styleClass="primary-button" onAction="#handleCapNhat"/>
            <Button text="Xoá" fx:id="btnXoa" styleClass="primary-button" onAction="#handleXoa"/>
            <Button text="Tải Excel" fx:id="btnTaiExcel" styleClass="primary-button" onAction="#handleTaiExcel"/>
        </HBox>

        <!-- Bảng hiển thị danh sách lô thuốc -->
        <TableView fx:id="tableLoThuoc" prefHeight="300">
            <columns>
                <TableColumn fx:id="colMaLoThuoc" text="Mã Lô Thuốc" prefWidth="200"/>
                <TableColumn fx:id="colMaThuoc" text="Mã Thuốc" prefWidth="200"/>
                <TableColumn fx:id="colSoLuongNhap" text="Số Lượng Nhập" prefWidth="200"/>
                <TableColumn fx:id="colNgayNhap" text="Ngày Nhập" prefWidth="220"/>
                <TableColumn fx:id="colHanSuDung" text="Hạn Sử Dụng" prefWidth="220"/>
                <TableColumn fx:id="colGiaNhap" text="Giá Nhập" prefWidth="200"/>
                <TableColumn fx:id="colGhiChu" text="Ghi Chú" prefWidth="340"/>
            </columns>
        </TableView>
    </VBox>
</StackPane>
